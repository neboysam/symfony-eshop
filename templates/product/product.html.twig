{% extends 'base.html.twig' %}

{% block title %}Symfony E-Shop - Produits{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-3">
            Recherche
        </div>
        <div class="col-md-9 mx-auto">
            <h1 class="text-center mb-4">Nos produits</h1>
            <div class="row product-container">
                {% for product in products %}
                    <div class="col-md-4 mb-5">
                        <div class="text-center">
                            <h5>{{ product.name }}</h5>
                            <span>{{ product.subtitle }}</span>
                            <a href=""><img src="{{ asset('/images/products/' ~ product.image) }}" alt="{{ product.name }}" class="img-fluid"></a>
                            <strong>{{ (product.price / 100)|number_format(2, ',', '.') }} EUR</strong>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
